# Application Configuration
APP_NAME="OAuth Provider"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Laravel Sail Configuration
APP_PORT=80
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025
VITE_PORT=5173

# Sail User Configuration
WWWGROUP=1000
WWWUSER=1000
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG="client_host=host.docker.internal"

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=oauth_provider
DB_USERNAME=oauth_user
DB_PASSWORD=secret

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# OAuth2 Configuration
OAUTH_PRIVATE_KEY_PATH="storage/oauth-private.key"
OAUTH_PUBLIC_KEY_PATH="storage/oauth-public.key"
OAUTH_PASSPHRASE=null
OAUTH_ACCESS_TOKEN_LIFETIME="PT1H"
OAUTH_REFRESH_TOKEN_LIFETIME="P1M"
OAUTH_AUTH_CODE_LIFETIME="PT10M"
OAUTH_REQUIRE_PKCE=true

# Metrics and Monitoring
OAUTH_ENABLE_METRICS=true
OAUTH_ENABLE_ALERTS=true
OAUTH_METRICS_RETENTION_DAYS=30

# Security
OAUTH_RATE_LIMITING_ENABLED=true
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"

# Admin Configuration
OAUTH_ADMIN_EMAIL=admin@example.com